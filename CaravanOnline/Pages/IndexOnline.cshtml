@page
@model IndexOnlineModel
@using CaravanOnline.Services
@using CaravanOnline.Models

<div id="loadingState" style="text-align: center; padding: 50px;">
    <h2>Loading game...</h2>
    <p>Connecting to room <span id="loadingRoomId"></span></p>
</div>

<div id="gameContainer" style="display: none;">
    <h2 id="userMessage">@Model.Message</h2>
    <p id="gameInfo">Room: <span id="roomIdDisplay"></span> | You are: <span id="playerRole"></span></p>
    <p id="currentPlayerDisplay">Current Turn: <span id="currentPlayerName"></span></p>

    <div style="margin-bottom: 15px;">
        <button type="button" id="discardLaneBtn" onclick="activateDiscardLane()">Discard Lane</button>
        <button type="button" id="discardCardBtn" onclick="activateDiscardCard()">Discard Card</button>
    </div>

    <div class="player-cards" id="playerCardsContainer">
        <p id="playerHandLabel">Your Cards:</p>
        <div id="playerHandCards"></div>
    </div>

    <div>
        <h3>Lane Displays</h3>
        <div style="display: flex; flex-direction: column;">
            <div id="lanes-1-3" style="display: flex; justify-content: space-around;"></div>
            <div id="lanes-4-6" style="display: flex; justify-content: space-around;"></div>
        </div>
    </div>
</div>

<div id="statusMessage" style="margin-top: 20px; padding: 15px; border-radius: 5px; display: none;"></div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
<script src="~/js/game.js"></script>
