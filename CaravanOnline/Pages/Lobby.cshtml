@page
@model CaravanOnline.Pages.LobbyModel
@{
    ViewData["Title"] = "Game Lobby";
}

<h1>Caravan Online - Lobby</h1>

<div style="margin: 20px 0;">
    <h2>Create or Join a Game</h2>
    
    <div style="margin-bottom: 20px;">
        <label for="playerName">Your Name:</label>
        <input type="text" id="playerName" placeholder="Enter your name" style="margin-left: 10px; padding: 5px;" />
    </div>

    <div style="display: flex; gap: 20px; margin-bottom: 30px;">
        <div style="flex: 1; border: 1px solid #ccc; padding: 20px; border-radius: 8px;">
            <h3>Create New Room</h3>
            <button id="createRoomBtn" onclick="createRoom()" style="padding: 10px 20px; font-size: 16px; cursor: pointer;">
                Create Room
            </button>
            <div id="roomCreatedInfo" style="margin-top: 15px; display: none;">
                <p>Room Created! Room Code: <strong id="roomCode"></strong></p>
                <p>Waiting for opponent to join...</p>
            </div>
        </div>

        <div style="flex: 1; border: 1px solid #ccc; padding: 20px; border-radius: 8px;">
            <h3>Join Existing Room</h3>
            <div style="margin-bottom: 15px;">
                <label for="roomIdInput">Room Code:</label>
                <input type="text" id="roomIdInput" placeholder="Enter room code" style="margin-left: 10px; padding: 5px;" />
            </div>
            <button id="joinRoomBtn" onclick="joinRoom()" style="padding: 10px 20px; font-size: 16px; cursor: pointer;">
                Join Room
            </button>
        </div>
    </div>

    <div style="border: 1px solid #ccc; padding: 20px; border-radius: 8px;">
        <h3>Available Rooms</h3>
        <button onclick="refreshRooms()" style="padding: 8px 16px; margin-bottom: 15px; cursor: pointer;">
            Refresh
        </button>
        <div id="availableRooms">
            <p>Loading available rooms...</p>
        </div>
    </div>
</div>

<div id="statusMessage" style="margin-top: 20px; padding: 15px; border-radius: 5px; display: none;"></div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
<script src="~/js/lobby.js"></script>
